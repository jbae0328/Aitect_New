<div class="sketch-workspace">
    <!-- 왼쪽 패널 - 도구 정보만 -->
    <div class="left-panel">
        <div class="tool-info-section">
            <h4>도구 정보</h4>
            <div class="tool-item">
                <label>현재 도구:</label>
                <span>@CurrentTool</span>
            </div>
            <div class="tool-item">
                <label>스케치 타입:</label>
                <span>@(SketchType == "2d" ? "2D" : "3D")</span>
            </div>
        </div>

        <div class="layers-section">
            <h4>레이어</h4>
            <div class="layer-list">
                <div class="layer-item active">Layer 1</div>
                <div class="layer-item">Layer 2</div>
                <div class="layer-item">Layer 3</div>
            </div>
            <button class="add-layer-btn">+ 레이어 추가</button>
        </div>
    </div>

    <!-- 중앙 뷰어 -->
    <div class="center-viewer">
        <div id="sketch-viewer" class="viewer-container">
            <!-- 3D 뷰어가 여기에 로드됩니다 -->
            <div class="viewer-placeholder">
                <span class="placeholder-icon">🎨</span>
                <p>@(SketchType == "2d" ? "2D" : "3D") Canvas</p>
                <small>여기서 그리기 작업을 수행합니다</small>
            </div>
        </div>
    </div>

    <!-- 오른쪽 패널 제거 (PropertiesPanel로 분리) -->
</div>

<style>
    .sketch-workspace {
        display: flex;
        height: 100%;
    }

    .left-panel {
        width: 250px;
        background: #f8f9fa;
        border-right: 1px solid #e9ecef;
        padding: 15px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .center-viewer {
        flex: 1;
        background: #ffffff;
    }

    .viewer-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
    }

    .viewer-placeholder {
        text-align: center;
        color: #666;
    }

    .placeholder-icon {
        font-size: 48px;
        display: block;
        margin-bottom: 10px;
    }

    .viewer-placeholder p {
        margin: 0 0 5px 0;
        font-size: 16px;
        font-weight: 500;
    }

    .viewer-placeholder small {
        font-size: 12px;
        color: #999;
    }

    .tool-info-section,
    .layers-section {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        padding: 12px;
    }

        .tool-info-section h4,
        .layers-section h4 {
            margin: 0 0 12px 0;
            font-size: 14px;
            color: #374151;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .tool-info-section h4::before {
                content: "🔧";
                font-size: 12px;
            }

            .layers-section h4::before {
                content: "📋";
                font-size: 12px;
            }

    .tool-item {
        display: flex;
        justify-content: space-between;
        padding: 6px 0;
        font-size: 12px;
        border-bottom: 1px solid #f3f4f6;
    }

        .tool-item:last-child {
            border-bottom: none;
        }

        .tool-item label {
            color: #6b7280;
            font-weight: 500;
        }

        .tool-item span {
            color: #374151;
            font-weight: 600;
        }

    .layer-list {
        display: flex;
        flex-direction: column;
        gap: 4px;
        margin-bottom: 10px;
    }

    .layer-item {
        padding: 8px 10px;
        background: #f8f9fa;
        border: 1px solid #e5e7eb;
        border-radius: 4px;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
    }

        .layer-item:hover {
            background: #f3f4f6;
            border-color: #d1d5db;
        }

        .layer-item.active {
            background: #dbeafe;
            border-color: #3b82f6;
            color: #1d4ed8;
        }

            .layer-item.active::after {
                content: "👁️";
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 10px;
            }

    .add-layer-btn {
        width: 100%;
        padding: 8px;
        background: #f3f4f6;
        border: 1px dashed #d1d5db;
        border-radius: 4px;
        font-size: 11px;
        color: #6b7280;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .add-layer-btn:hover {
            background: #e5e7eb;
            border-color: #9ca3af;
            color: #374151;
        }
</style>

@code {
    [Parameter] public string CurrentTool { get; set; } = "Select";
    [Parameter] public string SketchType { get; set; } = "3d";
}