@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="page">
    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
    }

    .content {
        padding: 0;
        margin: 0;
        height: 100vh;
        width: 100vw;
    }

    /* 기본 body 스타일 제거 */
    body {
        margin: 0;
        padding: 0;
    }
</style>
 
@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("ToolManager.setTool", "select");
        }
    }
}
